{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": false,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "strict": true,
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
